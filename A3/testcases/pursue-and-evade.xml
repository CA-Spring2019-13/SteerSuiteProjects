	<!--
  @pursuing agent
-->
  <agent>
    <name>Pursuer</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>30</x> <y>0</y> <z>30</z> </position>
      <direction> <random>true</random> </direction>
      <speed>5</speed>
      <color> <r>0</r> <g>1</g> <b>0</b> </color>
    </initialConditions>
    <goalSequence>
      <seekDynamicTarget>
        <Behaviour>
          <SteeringAlgorithm>Pursue And Evade</SteeringAlgorithm>
          <Parameters>
            <parameter>
                <key>sf_agent_repulsion_importance</key>
                <value>0</value>
            </parameter>
            <parameter>
                <key>sf_query_radius</key>
                <value>200</value>
            </parameter>
            <parameter>
                <key>sf_max_speed</key>
                <value>15</value>
            </parameter>
            <parameter>
                <key>sf_personal_space_threshold</key>
                <value>0</value>
            </parameter>
          </Parameters>
        </Behaviour>
        <targetLocation> <x>-30</x> <y>0</y> <z>20</z> </targetLocation>        
        <desiredSpeed>6</desiredSpeed>
        <timeDuration>1000</timeDuration>
      </seekDynamicTarget>
    </goalSequence>
  </agent>

	<!--
  @evading agent
-->

  <agent>
    <name>Evader</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>20</x> <y>0</y> <z>20</z> </position>
      <direction> <random>true</random> </direction>
      <speed>5</speed>
      <color> <r>1</r> <g>0</g> <b>0</b> </color>
    </initialConditions>
    <goalSequence>
      <fleeDynamicTarget>
        <Behaviour>
          <SteeringAlgorithm>Pursue And Evade</SteeringAlgorithm>
          <Parameters>
            <parameter>
                <key>sf_agent_repulsion_importance</key>
                <value>0</value>
            </parameter>
            <parameter>
                <key>sf_query_radius</key>
                <value>200</value>
            </parameter>
            <parameter>
                <key>sf_max_speed</key>
                <value>15</value>
            </parameter>
            <parameter>
                <key>sf_personal_space_threshold</key>
                <value>0</value>
            </parameter>
          </Parameters>
        </Behaviour>
        <targetLocation> <x>-98</x> <y>0</y> <z>5</z> </targetLocation>        
        <desiredSpeed>4</desiredSpeed>
        <timeDuration>1000</timeDuration>
      </fleeDynamicTarget>
    </goalSequence>
  </agent>
  
